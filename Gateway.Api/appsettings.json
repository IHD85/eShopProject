{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "basket": {
        "ClusterId": "basketCluster",
        "Match": { "Path": "/basket/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/basket" } ]
      },
      "order": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/order/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/order" } ]
      },
      "catalog": {
        "ClusterId": "catalogCluster",
        "Match": { "Path": "/catalog/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/catalog" } ]
      }
    },
    "Clusters": {
      "basketCluster": {
        "Destinations": {
          "basketDestination": { "Address": "http://basket-api:8080" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderDestination": { "Address": "http://order-api:8080" }
        }
      },
      "catalogCluster": {
        "Destinations": {
          "catalogDestination": { "Address": "http://catalog-api:8080" }
        }
      }
    }
  },

  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Gateway",
        "Uri": "http://gateway:8080/health"
      },
      {
        "Name": "Basket",
        "Uri": "http://basket-api:8080/health"
      },
      {
        "Name": "Order",
        "Uri": "http://order-api:8080/health"
      },
      {
        "Name": "Catalog",
        "Uri": "http://catalog-api:8080/health"
      }
    ]
  }
}
