{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }

  },
  "Otlp": { "Endpoint": "http://localhost:4317" },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=eshop-db;Port=5432;Database=eshop_catalog;Username=postgres;Password=postgres"
  },
  "RabbitMQ": {
    "Host": "rabbitmq",
    "User": "guest",
    "Password": "guest",
    "QueueName": "catalog_queue"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/catalog-logs.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "WithExceptionDetails",
      "WithMachineName"
    ]
  }
}
